<script>
    const enterYes = document.getElementById("enterYes");
    const enterNo = document.getElementById("enterNo");
    const payYes = document.getElementById("payYes");
    const payNo = document.getElementById("payNo");

    const paymentBox = document.getElementById("paymentBox");
    const mpesaBox = document.getElementById("mpesaBox");

    enterYes.onchange = () => {
        if (enterYes.checked) {
            enterNo.checked = false;
            paymentBox.classList.remove("hidden");
        }
    };

    enterNo.onchange = () => {
        if (enterNo.checked) {
            alert("WELCOME AGAIN");
            window.close();
        }
    };

    payYes.onchange = () => {
        if (payYes.checked) {
            payNo.checked = false;
            mpesaBox.classList.remove("hidden");
        }
    };

    payNo.onchange = () => {
        if (payNo.checked) {
            alert("WELCOME AGAIN");
            window.close();
        }
    };

    function copySendMoneyNumber() {
        navigator.clipboard.writeText("0792348004");
        alert("SEND MONEY NUMBER copied: 0792348004");
    }

    function autoCopyAndGuide() {
        navigator.clipboard.writeText("0792348004");
        alert(
            "HOW TO PAY\n\n" +
            "Follow these steps:\n\n" +
            "1. Dial *334#\n\n" +
            "2. Select SEND MONEY\n\n" +
            "3. Paste PHONE NUMBER: 0792348004\n\n" +
            "4. Enter AMOUNT: 50\n\n" +
            "5. Enter your M-Pesa PIN\n\n" +
            "ONCE YOU HAVE PAID, WAIT ABOUT 10 MINUTES AND YOU WILL BE ADDED AUTOMATICALLY TO THE GROUP.\n\n" +
            "Payment is for 2026 Entrance Fee."
        );
    }
</script>

